{
  "arrowParens": "always",
  "bracketSpacing": true,
  "embeddedLanguageFormatting": "auto",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "jsxSingleQuote": false,
  "overrides": [
    {
      "files": ["package.json"],
      "options": {
        "plugins": ["prettier-plugin-packagejson"]
      }
    },
    {
      "excludeFiles": ["package.json"],
      "files": ["*.json"],
      "options": {
        "jsonRecursiveSort": true,
        "plugins": ["prettier-plugin-sort-json"]
      }
    }
  ],
  "printWidth": 80,
  "proseWrap": "preserve",
  "quoteProps": "as-needed",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "trailingComma": "es5",
  "useTabs": false
}
